<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BD_DomoticaBD.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BD_DomoticaBD.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Domotica MVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navBarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navBarContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="casaDropdown" data-bs-toggle="dropdown">Casa</a>
                            <ul class="dropdown-menu" aria-labelledby="casaDropdown">
                                <li><a class="dropdown-item" asp-controller="Casa" asp-action="Index">Listado</a></li>
                                <li><a class="dropdown-item" asp-controller="Casa" asp-action="Alta">Agregar</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="electroDropdown" data-bs-toggle="dropdown">Electro</a>
                            <ul class="dropdown-menu" aria-labelledby="electroDropdown">
                                <li><a class="dropdown-item" asp-controller="Electrodomestico" asp-action="Index">Listado</a></li>
                                <li><a class="dropdown-item" asp-controller="Electrodomestico" asp-action="Alta">Agregar</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="consumoDropdown" data-bs-toggle="dropdown">Consumo</a>
                            <ul class="dropdown-menu" aria-labelledby="consumoDropdown">
                                <li><a class="dropdown-item" asp-controller="Consumo" asp-action="Index">Listado</a></li>
                                <li><a class="dropdown-item" asp-controller="Consumo" asp-action="Alta">Agregar</a></li>
                            </ul>
                        </li>
                    </ul>

                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <ul class="navbar-nav ms-auto align-items-center">
                            
                            <li class="nav-item me-3">
                                <span class="color: black;">
                                    ¡Hola, @User.Identity.Name!
                                </span>
                            </li>

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-secondary">Cerrar sesión</button>
                                </form>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Iniciar sesión</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Crear cuenta</a></li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="flex-fill">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer mt-auto py-3">
        <div class="container text-center small text-muted">
            &copy; 2025 - BD_DomoticaBD.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
