@{
    ViewData["Title"] = "Iniciar sesión";
}
<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-sm w-100" style="max-width:420px;">
        <div class="card-body p-4">
            <h4 class="card-title text-center mb-4">Iniciar sesión</h4>
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="correo" class="form-label">Correo</label>
                    <input type="email" name="correo" class="form-control" id="correo" required />
                </div>
                <div class="mb-3">
                    <label for="contrasenia" class="form-label">Contraseña</label>
                    <input type="password" name="contrasenia" class="form-control" id="contrasenia" required />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-fucsia btn-lg">Iniciar sesión</button>
                </div>
            </form>
            <div class="mt-3 text-center small text-muted">
                ¿No tenés cuenta? <a asp-controller="Account" asp-action="Register" class="link-primary">Creá una</a>
            </div>
        </div>
    </div>
</div>