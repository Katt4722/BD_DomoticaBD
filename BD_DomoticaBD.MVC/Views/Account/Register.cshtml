@{
    ViewData["Title"] = "Crear cuenta";
}
<h2>Crear cuenta</h2>
<form asp-controller="Account" asp-action="Register" method="post" class="w-100" style="max-width:420px;">
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input name="nombre" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Correo</label>
        <input name="correo" type="email" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Contraseña</label>
        <input name="contrasenia" type="password" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Teléfono</label>
        <input name="telefono" class="form-control" />
    </div>
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-brand">Crear cuenta</button>
        <a asp-action="Login" class="btn btn-secondary">Volver</a>
    </div>
</form>